<h1>New Metric</h1>

<%= form_with model: @metric do |form| %>
  <div class="row mb-3">
    <%= form.label :name, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
    <%= form.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="row mb-3">
    <%= form.label :value, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
    <%= form.number_field :value, class: "form-control" %>
    </div>
  </div>

  <div class="row mb-3">
    <%= form.label :timestamp, class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= form.datetime_field :timestamp, class: "form-control" %>
      </div>
  </div>

  <%= form.submit class: "btn btn-primary" %>

<% end %>
